{
    "name": "What's hot on Pinterest",
    "description": "What's hot on Pinterest is a plugin from Chrome to view the most popular pins.",
    "version": "0.2",
    "icons": {
        "16": "src/assets/icon16.png",
        "48": "src/assets/icon48.png",
        "128": "src/assets/icon128.png"
    },
    "permissions": [
    	"tabs"
	],
    "browser_action": {
        "default_icon": "src/assets/icon16.png",
        "default_title": "Hot on Pinterest",
        "popup": "popup.html"
    }
}